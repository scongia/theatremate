{
  "name": "theatermate",
  "version": "1.0.0",
  "description": "Hospital Theatre booking",
  "repository": "<Add your repository here>",
  "license": "ISC",
  "dependencies": {
    "@sap/cds": "latest",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "sqlite3": "^4.0.4"
  },
  "engines": {
    "node": "^8.9"
  },
  "scripts": {
    "setup": "npm install && npm run deploy_db && npm run deploy_srv",
    "deploy_db": "cds deploy db --to sqlite:db/theatremate.db",
    "deploy_srv": "cds deploy srv --to sqlite:db/theatremate.db",
    "start": "cds run"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "model": "srv",
        "credentials": {
          "database": "db/theatremate.db"
        }
      },
      "srv": {
        "kind": "sqlite",
        "model": "srv",
        "credentials": {
          "database": "db/theatremate.db"
        }
      }
    }
  }
}